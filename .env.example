# Environment Configuration for Unified Plant Classification App

# =================================
# Backend Configuration (Node.js)
# =================================

# Server
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database (MongoDB)
MONGODB_URI=mongodb://localhost:27017/agriculture-chat
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/agriculture-chat

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRE=30d

# Email Service (for OTP)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@plantclassification.com

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# =================================
# AI Services Configuration
# =================================

# Hugging Face API (for chat/image analysis)
HF_TOKEN=your_hugging_face_token_here

# Groq API (for advanced chat - optional)
GROQ_APIKEY=your_groq_api_key_here

# =================================
# ML Model Configuration (Python)
# =================================

# Model settings
ML_CONFIDENCE_THRESHOLD=0.60
ML_MODEL_PATH=./backend/ml_model/plant_disease_resnet50.pth

# Python environment
PYTHON_PATH=python
# For Windows with specific Python: C:\Python39\python.exe
# For Linux/Mac: /usr/bin/python3

# =================================
# Frontend Configuration
# =================================

# API Base URL (used in frontend build)
VITE_API_URL=http://localhost:5000/api
VITE_ML_API_URL=http://localhost:5000/api/ml

# =================================
# Optional: Standalone FastAPI Service
# =================================
# If running ML model as separate FastAPI service
FASTAPI_PORT=8000
FASTAPI_URL=http://localhost:8000
